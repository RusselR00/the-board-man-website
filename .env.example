# Environment Variables Template for THE BOARD MAN
# Copy this to .env.local for development and add to Vercel for production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Get this from Vercel Postgres dashboard after creating your database
DATABASE_URL="postgresql://username:password@hostname:port/database_name?sslmode=require"

# =============================================================================
# EMAIL CONFIGURATION (Resend)
# =============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Your verified domain or use Resend's domain for testing
FROM_EMAIL="noreply@yourdomain.com"

# Where admin notifications will be sent
ADMIN_EMAIL="admin@yourdomain.com"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Your production domain (without trailing slash)
NEXT_PUBLIC_BASE_URL="https://your-site.vercel.app"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-jwt-secret-here"

# Same as NEXT_PUBLIC_BASE_URL
NEXTAUTH_URL="https://your-site.vercel.app"

# =============================================================================
# ADMIN PANEL CONFIGURATION
# =============================================================================
# Default admin credentials (change these!)
DEFAULT_ADMIN_EMAIL="admin@yourdomain.com"
DEFAULT_ADMIN_PASSWORD="change-this-secure-password"

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================
# Vercel Analytics (automatically enabled in Vercel projects)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# Google Analytics (if you want to add it)
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# =============================================================================
# OPTIONAL: EXTERNAL INTEGRATIONS
# =============================================================================
# Google Maps API (for contact page map)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Calendly for booking integration (alternative to custom booking)
# NEXT_PUBLIC_CALENDLY_URL="https://calendly.com/your-account"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Set to 'development' for local development
NODE_ENV="production"

# Database connection pool settings (optional)
# DATABASE_POOL_MAX=20
# DATABASE_POOL_MIN=5